    <script>
        $(function(){
            var charSelM = 0 ;
            $(".radioL").click(function(){ 
               if ($(".radioL").is(":checked")){
                   charSelM = $(this).next().children().html();
                   $(".prinCharge").text(charSelM);
                }  
            });
            $(".chargeBtn").click(function(){
                var chargeUser = $("#hidenIdx").val();
                var url = "charDb?c_idx="+chargeUser+"&chargeMoney="+charSelM;
                $(location).attr('href',url);
            });
        });
    </script>
</head>
